<!-- Cart Page Template -->

<style>
    .cart-container {
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(15, 78, 44, 0.08);
        padding: 32px;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .cart-title {
        font-size: 2rem;
        color: #21211fff;
        margin-bottom: 24px;
        text-align: center;
    }
    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 32px;
    }
    .cart-table th, .cart-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    .cart-qty-form {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .cart-qty-input {
        width: 48px;
        padding: 4px 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        text-align: center;
        font-size: 1rem;
    }
    .cart-qty-btn {
        background: #897d5bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 4px 8px;
        cursor: pointer;
        font-size: 1rem;

    }
    .cart-qty-btn:hover {
        background: #4d4122ff;
    }
    .cart-table th {
        color: #21211fff;
        font-weight: 600;
        background: #f6faf8;
    }
    .cart-product-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #eee;
    }
    .cart-total {
        font-size: 1.2rem;
        font-weight: 600;
        color: #B7A266;
        text-align: right;
        margin-bottom: 24px;
    }
    .checkout-btn {
        display: block;
        width: 100%;
        background: #b3984fff;
        color: #fff;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 16px 0;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background 0.2s;
    }
    .checkout-btn:hover {
        background: #463f28ff;
    }
    .empty-cart {
        text-align: center;
        color: #888;
        font-size: 1.2rem;
        margin: 40px 0;
    }
</style>

<div class="cart-container">
    <h1 class="cart-title">{{ 'cart.title' | t }}</h1>

    {% if cart.item_count == 0 %}
        <div class="empty-cart">Your cart is empty.</div>
    {% else %}
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Title</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.items %}
                    <tr>
                        <td>
                            <img class="cart-product-img" src="{{ item.image | img_url: 'medium' }}" alt="{{ item.title }}">
                        </td>
                        <td>
                          {{ item.product.title }}<br>
                          {% if item.variant.title  != 'Default title'%}
                          {{ item.variant.title }}
                          {% endif %}
                        </td>
                        <td>
                            <form class="cart-qty-form" method="post" action="/cart/change">
                                <input type="hidden" name="id" value="{{ item.key }}">
                                <button type="submit" name="quantity" value="{{ item.quantity | minus: 1 }}" class="cart-qty-btn" {% if item.quantity <= 1 %}disabled{% endif %}>-</button>
                                <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="cart-qty-input" onchange="this.form.submit()">
                                <button type="submit" name="quantity" value="{{ item.quantity | plus: 1 }}" class="cart-qty-btn">+</button>
                            </form>
                        </td>
                        <td>
                           
                            {{ item.line_price | money }}
                        </td>
                        <td>
                            <form method="post" action="/cart/change">
                                <input type="hidden" name="id" value="{{ item.key }}">
                                <input type="hidden" name="quantity" value="0">
                                <button type="submit" style="background:none;border:none;color:#0F4E2C;cursor:pointer;">Remove</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="cart-total">
            Total: {{ cart.total_price | money }}
        </div>

        <a href="/checkout" class="checkout-btn">Checkout</a>
    {% endif %}
</div>