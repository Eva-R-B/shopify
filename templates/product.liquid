<!-- Product Page Layout -->
<div class="product-page">
    <div class="product-image">
        <img src="{{ product.featured_image | image_url: width:100%}}" alt="Product Image">
    </div>
    <div class="product-details">
        <h1 class="product-title">{{ product.title }}</h1>
        <div class="product-price">{{ product.price | money }}</div>
        {% comment %} <form class="product-form">
            {% comment %} <div class="product-variations">
                <label for="variation">Choose a {{ product.options[0] }}:</label>
                <select id="variation" name="id">{% for variant in product.variants %}<option value="{{ variant.id }}"> {{ variant.title }}</option>{% endfor %}</select>
            </div> {% endcomment %}
            {% comment %} <div class="product-quantity">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1">
            </div> {% endcomment %}
        </form> {% endcomment %}
        {% form 'product', product %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="add-to-cart">Add to Cart</button>
        {% endform %}
        <div class="product-description">
            <h2>Description</h2>
            <p>{{ product.description }}</p>
        </div>
    </div>
</div>

<style>
:root {
  --accent-color: #a3905bff;
}
.product-page {
        display: flex;
        gap: 40px;
        max-width: 900px;
        margin: 40px auto;
        padding: 32px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.07);
}
.product-image img {
        width: 400px;
        height: 400px;
        object-fit: cover;
        border-radius: 8px;
        background: #f7f7f7;
}
.product-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
}
.product-title {
        font-size: 2rem;
        margin-bottom: 8px;
}
.product-price {
        font-size: 1.5rem;
        color:var(--accent-color);
        margin-bottom: 16px;
}
.product-form {
        margin-bottom: 24px;
}
.product-variations,
.product-quantity {
        margin-bottom: 16px;
}
.product-variations label,
.product-quantity label {
        display: block;
        margin-bottom: 4px;
        font-weight: 500;
}
.product-variations select,
.product-quantity input {
        padding: 6px 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
}
.add-to-cart {
        background: var(--accent-color);
        color: #fff;
        border: none;
        padding: 12px 32px;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
}
.add-to-cart:hover {
        background: var(--accent-color);
.product-description h2 {
        font-size: 1.2rem;
        margin-bottom: 6px;
}
.product-description p {
        color: #444;
        line-height: 1.6;
}
@media (max-width: 800px) {
        .product-page {
                flex-direction: column;
                padding: 16px;
        }
        .product-image img {
                width: 100%;
                height: auto;
                margin-bottom: 24px;
        }
}
</style>