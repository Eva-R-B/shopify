<button
    style="background-color: {{ block.settings.button_color }}; color: #fff; padding: 12px 24px; border: none; border-radius: 4px; cursor: pointer;"
>
    <a href="{{ block.settings.button_link }}" style="color: inherit; text-decoration: none;">
        {{ block.settings.button_text }}
    </a>
</button>

{% schema %}
{
    "name": "Custom Button",
    "settings": [
        {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Click me"
        },
        {
            "type": "color",
            "id": "button_color",
            "label": "Button color",
            "default": "#B7A266"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        }
    ],"presets": [
        {
            "name": "Custom Button",
            "category": "Custom Sections"
        }
    ],
}
{% endschema %}