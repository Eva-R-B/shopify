
{% comment %} Title Block: customizable width, color, font, alignment, and text {% endcomment %}
{% assign tag = block.settings.element | default: 'h2' %}
<{{ tag }}
        style="
                width: {{ block.settings.width | default: '100%' }};
                color: {{ block.settings.color | default: '#B7A266' }};
                font-family: {{ block.settings.font | default: 'inherit' }};
                text-align: {{ block.settings.align | default: 'left' }};
                font-size: 2rem;
                font-weight: 400;
                margin: 32px 0 12px 0;
                box-sizing: border-box;
        "
>
        {{ block.settings.text | strip_html | escape }}
</{{ tag }}>

{% schema %}
{
        "name": "Title Block",
        "settings": [
                {
                        "type": "select",
                        "id": "element",
                        "label": "Title Element",
                        "options": [
                                { "value": "h1", "label": "Heading 1" },
                                { "value": "h2", "label": "Heading 2" },
                                { "value": "h3", "label": "Heading 3" },
                                { "value": "h4", "label": "Heading 4" },
                                { "value": "h5", "label": "Heading 5" },
                                { "value": "h6", "label": "Heading 6" }
                        ],
                        "default": "h2"
                },
                {
                        "type": "text",
                        "id": "text",
                        "label": "Title Text",
                        "default": "Your title here"
                },
                {
                        "type": "color",
                        "id": "color",
                        "label": "Title Color",
                        "default": "#B7A266"
                },
                {
                        "type": "text",
                        "id": "width",
                        "label": "Title Width (e.g. 100%, 600px)",
                        "default": "100%"
                },
                {
                        "type": "select",
                        "id": "font",
                        "label": "Font Family",
                        "options": [
                                { "value": "inherit", "label": "Theme Default" },
                                { "value": "Arial, sans-serif", "label": "Arial" },
                                { "value": "Georgia, serif", "label": "Georgia" },
                                { "value": "'Open Sans', Arial, sans-serif", "label": "Open Sans" },
                                { "value": "'Times New Roman', Times, serif", "label": "Times New Roman" },
                                { "value": "'Courier New', Courier, monospace", "label": "Courier New" }
                        ],
                        "default": "inherit"
                },
                {
                        "type": "select",
                        "id": "align",
                        "label": "Text Alignment",
                        "options": [
                                { "value": "left", "label": "Left" },
                                { "value": "center", "label": "Center" },
                                { "value": "right", "label": "Right" }
                        ],
                        "default": "left"
                }
        ],
        "presets": [
                {
                        "name": "Title",
                        "category": "Custom Sections"
                }
        ]
}
{% endschema %}
