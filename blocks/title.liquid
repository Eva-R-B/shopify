<style>
.custom-title-block {
    font-size: 1.5rem;
    margin-top: 32px;
    margin-bottom: 12px;
    font-weight: 400;
    color: var(--accent-color);
}
</style>


{% comment %} ESCAPE converts special characters into HTML entities, so they display safely {% endcomment %}
{% assign tag = block.settings.element | default: 'h2' %}
<{{ tag }} class="custom-title-block">
    {{ block.settings.text | strip_html | escape }}
</{{ tag }}>


{% schema %}
{
        "name": "Title Block",
        "settings": [
                {
                        "type": "select",
                        "id": "element",
                        "label": "Title Element",
                        "options": [
                                { "value": "h1", "label": "Heading 1" },
                                { "value": "h2", "label": "Heading 2" },
                                { "value": "h3", "label": "Heading 3" },
                                { "value": "h4", "label": "Heading 4" },
                                { "value": "h5", "label": "Heading 5" },
                                { "value": "h6", "label": "Heading 6" }
                        ],
                        "default": "h2"
                },
                {
                        "type": "text",
                        "id": "text",
                        "label": "Title Text",
                        "default": "Your title here"
                }
        ],
        "presets": [
                {
                        "name": "Title ",
                        "category": "Custom Sections"
                }
        ]
}
{% endschema %}
