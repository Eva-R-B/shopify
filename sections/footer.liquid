<footer class="site-footer" style="background:#fff; padding:48px 0 24px 0; border-top:1px solid #ececec;">
  <style>
  .site-footer {
  color: #444;
  background: #fff;
  padding: 48px 0 24px 0;
  border-top: 1px solid #ececec;
  }

  .footer-container {
  max-width: 1450px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  align-items: center;
  padding: 0 50px;
  gap: 32px;
  }

  .footer-logo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  }

  .footer-logo img {
  max-width: 150px;
  height: 70px;
  object-fit: contain;
  margin-bottom: 12px;
  }

  .footer-logo p {
  color: #aaa;
  font-size: 0.95em;
  margin-top: 8px;
  }

  .footer-menus-social-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 56px;
  }

  .footer-menus {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 24px;
  padding-top: 0;
  }

  .footer-menu ul {
  display: flex;
  gap: 24px;
  list-style: none;
  padding: 0;
  margin: 0;
  }

  .footer-menu a {
  color: #555;
  text-decoration: none;
  font-size: 1em;
  transition: color 0.2s;
  }

  .footer-menu a:hover {
  color: var(--color-accent);
  text-decoration: underline;
  }

  .footer-contact {
  text-align: right;
  }

  .footer-contact p {
  font-size: 0.95em;
  color: #555;
  line-height: 1.6;
  margin: 0;
  }

  .footer-contact a {
  color: #343332ff;
  text-decoration: none;
  }

  .footer-contact a:hover {
  text-decoration: underline;
  }

  .footer-social {
  margin-top: 0;
  display: flex;
  justify-content: center;
  gap: 12px;
  width: 100%;
  }

  .footer-social img {
  width: 32px;
  height: 32px;
  opacity: 0.85;
  transition: all 0.2s;
  filter: brightness(0) saturate(100%) invert(67%) sepia(59%) saturate(456%) hue-rotate(18deg) brightness(91%) contrast(84%);
  }

  .footer-social a:hover img {
  opacity: 1;
  transform: scale(1.1);
  filter: brightness(0) saturate(100%) invert(67%) sepia(59%) saturate(456%) hue-rotate(18deg) brightness(101%) contrast(94%);
  }

  @media (max-width: 900px) {
  .footer-container {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 24px;
  }

  .footer-logo,
  .footer-contact {
    align-items: center;
    text-align: center;
  }

  .footer-menus-social-wrapper {
    align-items: center;
  }

  .footer-menus {
    justify-content: center;
  }

  .footer-social {
    justify-content: center;
  }
  }
</style>

  <div class="footer-container">
    <!-- Logo -->
    <div class="footer-logo">
      <a href="{{ shop.url }}">
        {% if shop.brand.logo != blank %}
          <img src="{{ shop.brand.logo | img_url: '200x' }}" alt="{{ shop.name }} logo" width="100%" >
        {% else %}
          <h2>{{ shop.name }}</h2>
        {% endif %}
      </a>
   <p style="color: #343332ff;">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>

    </div>

    <!-- Quick Menus & Social Media (wrapped) -->
    <div class="footer-menus-social-wrapper">
      <div class="footer-menus">
        {% for linklist in linklists %}
          {% if linklist.handle contains 'footer' %}
            <div class="footer-menu">
              <ul>
                {% for link in linklists.main-menu.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="footer-social">
        <a href="{{ settings.social_facebook | default: '#' }}" target="_blank">
        <img src="{{ 'icons8-facebook.svg' | asset_url }}" alt="Facebook">
        </a>
        <a href="{{ settings.social_instagram | default: '#' }}" target="_blank">
        <img src="{{ 'icons8-instagram.svg' | asset_url }}" alt="Instagram">
        </a>
        <a href="{{ settings.social_linkedin | default: '#' }}" target="_blank">
        <img src="{{ 'icons8-linkedin.svg' | asset_url }}" alt="LinkedIn">
        </a>
      </div>
    </div>

    <!-- Contact & Social -->
    <div class="footer-contact">
      <h4>Contact</h4>
      <p>
        {% if shop.email %}
          <a href="mailto:{{ shop.email }}">{{ shop.email }}</a><br>
        {% endif %}
        {% if shop.phone %}
          <span>{{ shop.phone }}</span><br>
        {% endif %}
        {{ shop.address.street }}<br>
        {{ shop.address.city }}, {{ shop.address.province_code }} {{ shop.address.zip }}
      </p>
      
    </div>
  </div>
</footer>