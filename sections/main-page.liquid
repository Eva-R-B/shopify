<style>
.about-page {
    max-width: 800px;
    margin: 40px auto;
    padding: 32px;
    background: #fff;
    border-radius: 8px;
    font-family: inherit;
    color: #222;
}

.about-page h2 {
    font-size: 1.5rem;
    margin-top: 32px;
    margin-bottom: 12px;
    font-weight: 400;
    text-align: center;
    color: var(--accent-color);
}
.about-page p {
    font-size: 1.1rem;
    margin-bottom: 16px;
    line-height: 1.7;
    text-align: center;
}
.about-list-container {
    display: flex;
    justify-content: center;
    margin-bottom: 24px;
}
.about-list-container ul {
    list-style: disc inside;
    padding-left: 0;
    margin: 0;
    text-align: left;
}
.about-page li {
    margin-bottom: 8px;
    font-size: 1.05rem;
}
.about-page a {
    color: #b3984fff;
    text-decoration: underline;
    transition: color 0.2s;
}
.about-page a:hover {
    color: #b3984fff;
}
</style>

<div class="container about-page">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.intro }}</p>
    <h2>{{ section.settings.story_title }}</h2>
    <p>{{ section.settings.story_text }}</p>
    <h2>{{ section.settings.contact_title }}</h2>
    <p>
        {{ section.settings.contact_text | replace: '[contact_link]', '<a href="/pages/contact">contact us</a>' }}
    </p>
</div>

{% schema %}
{
    "name": "Template Page",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Main Title",
            "default": "About Our Shop"
        },
        {
            "type": "textarea",
            "id": "intro",
            "label": "Intro Text",
            "default": "Welcome to our store! We are passionate about providing quality products and excellent customer service."
        },
        {
            "type": "text",
            "id": "story_title",
            "label": "Story Title",
            "default": "Our Story"
        },
        {
            "type": "textarea",
            "id": "story_text",
            "label": "Story Text",
            "default": "Founded in [Year], our shop has grown from a small local business to a trusted online destination for shoppers worldwide."
        },
        
        {
            "type": "text",
            "id": "contact_title",
            "label": "Contact Title",
            "default": "Contact Us"
        },
        {
            "type": "textarea",
            "id": "contact_text",
            "label": "Contact Text (use [contact_link] for the link)",
            "default": "If you have any questions, feel free to [contact_link]."
        }
    ],
    "presets": [
        {
            "name": "Template Page",
            "category": "Custom"
        }
    ]
}
{% endschema %}