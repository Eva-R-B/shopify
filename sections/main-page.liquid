{% stylesheet %}
.about-page {
    max-width: 800px;
    margin: 40px auto;
    padding: 32px;
    background: #fff;
    border-radius: 8px;
    font-family: inherit;
    color: #222;
}

.about-page h2 {
    font-size: 1.5rem;
    margin-top: 32px;
    margin-bottom: 12px;
    font-weight: 400;
    text-align: center;
    color: var(--accent-color);
}
.about-page p {
    font-size: 1.1rem;
    margin-bottom: 16px;
    line-height: 1.7;
    text-align: center;
}
.about-list-container {
    display: flex;
    justify-content: center;
    margin-bottom: 24px;
}
.about-list-container ul {
    list-style: disc inside;
    padding-left: 0;
    margin: 0;
    text-align: left;
}
.about-page li {
    margin-bottom: 8px;
    font-size: 1.05rem;
}
.about-page a {
    color: #b3984fff;
    text-decoration: underline;
    transition: color 0.2s;
}
.about-page a:hover {
    color: #b3984fff;
}
{% endstylesheet %}

