<style>
.contact-page {
    max-width: 1400px;
    margin: auto;
    padding: 32px;
    background: #fff;
    border-radius: 8px;
    font-family: inherit;
    color: #222;
}

.contact-page h1 {
    font-size: 2rem;
    margin-bottom: 24px;
    text-align: center;
    color: var(--accent-color);
}

.contact-page p {
    font-size: 1.1rem;
    margin-bottom: 16px;
    line-height: 1.7;
    text-align: center;
}

.contact-form {
    max-width: 800px;
    margin: 0 auto;
    margin-top: 32px;
}

.contact-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-bottom: 16px;
    font-size: 1rem;
}

.contact-form button {
    background: var(--accent-color);
    color: #fff;
    border: none;
    padding: 12px 32px;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
}

.contact-form button:hover {
    opacity: 0.9;
}
</style>

<div class="contact-page">
    <h1>{{ page.title }}</h1>
    
    <div class="page-content">
        {{ page.content }}
    </div>
    
   
    
    <form class="contact-form" method="post" action="/contact">
        <label for="contact-name">Name *</label>
        <input type="text" id="contact-name" name="contact[name]" required>
        
        <label for="contact-email">Email *</label>
        <input type="email" id="contact-email" name="contact[email]" required>
        
        <label for="contact-subject">Subject</label>
        <input type="text" id="contact-subject" name="contact[subject]">
        
        <label for="contact-message">Message *</label>
        <textarea id="contact-message" name="contact[body]" rows="6" required></textarea>
        
        <button type="submit">Send Message</button>
    </form>
</div>

{% schema %}
{
    "name": "Main contact",
    "tag": "section",
    "settings": []
}
{% endschema %}
