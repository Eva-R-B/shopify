<header class="site-header" style="border-bottom: 1px solid #ececec; background: #fff; padding: 24px 0;">
    <style>
        :root {
            --font-main: 'Inter', Arial, sans-serif;
            --font-menu: 'Montserrat', 'Helvetica Neue', Arial, sans-serif;
            --color-main: #222;
            --color-accent: #B7A266;
        }
        .site-header {
                font-family: var(--font-main);
                color: var(--color-main);
        }
        .header__container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                gap: 32px;
                padding: 0 50px;
                flex-wrap: wrap;
        }
        .header__logo img {
                height: 70px;
                max-width: 150px;
                object-fit: contain;
        }

        .header__menu {
                flex: 2;
                display: flex;
                justify-content: center;
        }
        .header__menu ul {
                display: flex;
                gap: 24px;
                list-style: none;
                margin: 0;
                padding: 0;
        }
        .header__menu a {
                font-family: var(--font-menu);
                font-weight: 400;
                font-size: 1.1rem;
                letter-spacing: 0.05em;
                color: var(--color-main);
                text-decoration: none;
                transition: color 0.2s;
        }
        .header__menu a:hover {
                color: var(--color-accent);
        }

        .header__right {
                display: flex;
                align-items: center;
                gap: 24px;
                min-width: 200px;
                justify-content: flex-end;
        }

        .header__cart a {
                display: flex;
                align-items: center;
        }

        .header__contact a {
                color: #343332;
                font-size: 0.95em;
                text-decoration: none;
        }
        .header__contact a:hover {
                text-decoration: underline;
        }

        @media (max-width: 900px) {
                .header__container {
                        flex-direction: column;
                        gap: 18px;
                }
                .header__menu {
                        justify-content: center;
                }
                .header__right {
                        justify-content: center;
                }
        }
    </style>

    <div class="header__container">
        <!-- Logo -->
        <div class="header__logo">
            {% if shop.brand.logo %}
                <a href="{{ shop.url }}">
                    <img src="{{ shop.brand.logo | img_url: '200x' }}" alt="{{ shop.name }} logo">
                </a>
            {% else %}
                <a href="{{ shop.url }}">{{ shop.name }}</a>
            {% endif %}
        </div>

        <!-- Menu -->
        <nav class="header__menu">
            <ul>
                {% for link in linklists.main-menu.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
            </ul>
        </nav>

        <!-- Cart -->
        <div class="header__right">
            <div class="header__cart">
                <a href="/cart" title="Se kurv">
                    <svg width="24" height="24" fill="none" stroke="var(--color-accent)" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</header>
