<style>
.collection-section {
  margin-bottom: 5rem;
}

.category-heading {
  color: var(--accent-color);
  margin: 2rem 0 1.5rem;
  text-align: center;
  font-size: 2rem;
  font-weight: 300;
}

.collection-description {
  text-align: center;
  color: #666;
  font-size: 1.1rem;
  margin-bottom: 2rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.collection-products {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  max-width: 1400px;
  margin: 0 auto;
}

.product-card {
  background: #fff;
  border: none;
  border-radius: 12px;
  box-shadow: none;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.product-card:hover {
  transform: scale(1.02);
}

.product-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-bottom: none;
  display: block;
}

.product-card h2 {
  font-size: 1.2rem;
  margin: 16px 12px 8px 12px;
  color: #222;
  font-weight: 500;
}

.product-card p {
  margin: 0 12px 16px 12px;
  color: var(--accent-color);
  font-size: 1.1rem;
  font-weight: 500;
}

.product-card a {
  text-decoration: none;
  color: inherit;
  display: block;
}

.collection-empty {
  text-align: center;
  color: #666;
  font-size: 1.1rem;
  padding: 3rem;
}

.products-count {
  text-align: center;
  color: #666;
  font-size: 1rem;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .collection-products {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    padding: 0 1rem;
  }
  
  .category-heading {
    font-size: 1.5rem;
  }
}
</style>

<div class="container">
  <section class="collection-section">
    <!-- Collection Title -->
    <h2 class="category-heading">{{ collection.title }}</h2>

    <!-- Collection Description (if exists) -->
    {% if collection.description != blank %}
      <div class="collection-description">
        {{ collection.description }}
      </div>
    {% endif %}
    
    <!-- Products Grid -->
    {% if collection.products.size > 0 %}
      <ul class="collection-products">
        {% for product in collection.products %}
          <li class="product-card">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
              {% else %}
                <div style="width: 100%; height: 200px; background: #f7f7f7; display: flex; align-items: center; justify-content: center; color: #999;">
                  No Image
                </div>
              {% endif %}
              <h2>{{ product.title }}</h2>
              <p>{{ product.price | money }}</p>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="collection-empty">
        <p>This collection is currently empty.</p>
      </div>
    {% endif %}
  </section>
</div>

{% schema %}
{
  "name": "Collection Subcollection",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Subcollection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
