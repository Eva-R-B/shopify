

<style>
.customizable-section {
    max-width: 1400px; 
    margin: 0 auto;     
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 40px 24px;
}
.customizable-section--reverse {
    flex-direction: row-reverse;
}
.customizable-section__image {
flex: 1;
}
.customizable-section__content {
    flex: 1;
}
.customizable-section__title {
font-size: 2rem;
font-weight: 400;
margin-bottom: 16px;
color: var(--accent-color);
}
.customizable-section__text {
font-family: 'Open Sans', Arial, sans-serif;
font-size: 1rem;
margin-bottom: 24px;
}
</style>

{% comment %} placeholder for blocks {% endcomment %}
<div class="customizable-section{% if section.settings.image_position == 'right' %} customizable-section--reverse{% endif %}">
   {% content_for 'blocks' %}
   {% comment %} here blocks will be inserted {% endcomment %}
</div>

{% schema %}
{
    "name": "Picture Text Section",
    "blocks": [
        {
            "type": "@theme",
        }
    ],
    "presets": [
        {
            "name": "Custom Section",
            "category": "Custom Sections"
        }
    ],
}
{% endschema %}


